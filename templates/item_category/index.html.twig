{% extends 'base.html.twig' %}

{% block title %}Item Categories {{ parent() }}{% endblock %}

{% block body %}
    {% include "defaults/pagetitle.html.twig" with { title: 'List of categories' } %}
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for item_category in item_categories %}
                    <tr>
                        <td>{{ item_category.id }}</td>
                        <td>{{ item_category.name }}</td>
                        <td class="btn-group">
                            <a class="btn btn-sm btn-info" href="{{ path('item_category_show', {'id': item_category.id}) }}">show</a>
                            <a class="btn btn-sm btn-warning" href="{{ path('item_category_edit', {'id': item_category.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
